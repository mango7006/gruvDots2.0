(defvar volume_level 0)

(defwidget volume-display []
  (box
    :class "volume-box"
    :orientation "horizontal"
    :spacing 10
    (label :text "ï€¨") ; You can replace with different icons based on volume
    (label :text volume_level "%")))

(defwindow volume-popup
  :monitor 0
  :geometry (geometry :x "50%" :y "5%" :anchor "top center")
  :stacking "fg"
  :exclusive false
  :focusable false
  :visible false
  (volume-display))

